{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node",
        "config": { 
          "includeFiles": [
            "index.html",
            "public/**",
            "controller/**"
          ] 
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.js",
        "headers": {
          "Access-Control-Allow-Origin": "https://moonlab.top,http://lycois.org",
          "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
          "Access-Control-Allow-Headers": "Content-Type, Authorization"
        }
      },
      {
        "src": "/(.*)",
        "methods": ["OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "https://moonlab.top,http://lycois.org",
          "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
          "Access-Control-Allow-Headers": "Content-Type, Authorization"
        },
        "continue": true
      }
    ]
  }